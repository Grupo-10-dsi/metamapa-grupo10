# Base de datos (ajusta con el servicio de DB que uses: MySQL local, Railway o RDS)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=admin
MYSQL_DB_AGREGADOR=agregador_db
MYSQL_DB_DINAMICA=dinamica_db
MYSQL_DB_ESTADISTICA=estadistica_db
MYSQL_DB_GESTOR=gestor_db

# Keycloak (URL pública del realm MetaMapa)
KEYCLOAK_URL=http://keycloak:9090/realms/MetaMapa

# Keycloak - Issuers válidos (separados por coma)
# En desarrollo: http://localhost:9090/realms/MetaMapa,http://host.docker.internal:9090/realms/MetaMapa
# En producción: https://auth.metamapa.com/realms/MetaMapa
KEYCLOAK_VALID_ISSUERS=http://localhost:9090/realms/MetaMapa,http://host.docker.internal:9090/realms/MetaMapa

# Keycloak - URL para JWK Set (claves públicas)
# En desarrollo: http://localhost:9090/realms/MetaMapa/protocol/openid-connect/certs
# En producción: https://auth.metamapa.com/realms/MetaMapa/protocol/openid-connect/certs
KEYCLOAK_JWK_SET_URI=http://localhost:9090/realms/MetaMapa/protocol/openid-connect/certs

